div(class="btn-group pull-right")
    a(href="", class="btn btn-default" ng-click="cancel(); submitted = false", )
     span(ng-hide="item._id")=__('Cancel')
     span(ng-show="item._id")=__('Close')
    a(href="", id="#newActionButton", class="btn btn-default" ng-click="create(); submitted = false")
     =__('New')
    button(type="submit", class="btn btn-default")
     =__('Save')
    a(class="btn btn-default dropdown-toggle" data-toggle="dropdown")
        span(class="fa fa-caret-down")
    ul(class="dropdown-menu")
        li
            button(type="submit", class="btn btn-link", ng-click="save('NEW')")
                i(class="fa fa-plus fa-fw")
                =__('Save & New')
        li
            button(type="submit", class="btn btn-link", ng-click="save('CLOSE')")
                i(class="fa fa-save fa-fw")
                =__('Save & Close')
