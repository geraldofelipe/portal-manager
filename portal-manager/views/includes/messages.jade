div(id="messages", style="display:none", ng-controller="MessagesController")
    alert(ng-repeat="message in messages" type="message.type" close="close($index)")
        strong(ng-show="{{message.type == 'success'}}")
            span(class="glyphicon glyphicon-ok-sign") &nbsp;
            span=__('Success!')
        strong(ng-show="{{message.type == 'danger'}}")
            span(class="glyphicon glyphicon-minus-sign") &nbsp;
            span=__('Error!')
        strong(ng-show="{{message.type == 'info'}}")
            span(class="glyphicon glyphicon-info-sign") &nbsp;
            span=__('Information!')
        strong(ng-show="{{message.type == 'warning'}}")
            span(class="glyphicon glyphicon-exclamation-sign") &nbsp;
            span=__('Warning!')
        span {{message.msg}}