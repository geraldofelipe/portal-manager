extends layouts/manager-login

block content
  .login-container(ng-controller="LoginController")
   form(class="form-signin", name="form", role="form", ng-submit='login()', method="post" autocomplete="off" novalidate shake-that submitted="submitted")
    div(class="panel panel-default box-shadow")
     div(class="panel-heading")
       h3(class="panel-title")=__('Access Control')
     div(class="panel-body")
          div(class="form-group" ng-class="{'has-error': form.username.$invalid && submitted}")
           input(type="text", class="form-control", name="username", ng-model="user.username", placeholder=__("Username") required autofocus)
          div(class="form-group" ng-class="{'has-error': form.password.$invalid && submitted}")
           input(type="password", class="form-control" name="password", ng-model="user.password", placeholder=__("Password") required)
          label(class="checkbox")=__("Remember me")
            input(type="checkbox", id="rememberMe", name="rememberMe", value="true", ng-model="user.rememberMe")
          input(type="submit", class="btn btn-lg btn-primary btn-block", value=__('Sign In'))
  script(src='/javascripts/app/controllers/LoginController.js', type='text/javascript')